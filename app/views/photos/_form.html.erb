
<% unless @photo.errors.full_messages.empty? %>
   <ul>
    <% @photo.errors.full_messages.each do |e| %>
       <li><%= e %></li>
     <% end %>
   </ul>
 <% end %>

 <%= form_for [@user, @photo] do |f| %>
 <p>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>
 </p>
 <p>
  <%= f.label :description %>
  <%= f.text_field :description%>
 </p>
 <p>
  <%= f.label :image %>
  <%= f.text_field :image%>
 </p>
 <p>
  <%= f.label :location %>
  <%= f.text_field :location%>
 </p>
 <p>
 <%= f.label :tag_list, "Tags (seperated by commas)"%>
  <%= f.text_field :tag_list%>
 </p>
 <p>
  <%= f.label :category_id %>
  <%= f.collection_select( :category_id, Category.all, :id, :name) %>
 </p>
 <%= f.submit %>
<% end %>
