<!-- Dropdown Structure -->
  <ul id="dropdown1" class="dropdown-content">
<% if @current_user.present? %>
    <li><%= link_to "My Profile", user_path(@current_user) %> </li>
    <li><%= link_to "My Galleries", user_galleries_path(@current_user) %> </li>
    <li><%= link_to "Manage Photos", user_photos_path(@current_user) %> </li>
    <li class="divider"></li>
    <li><%= link_to "Followers", followers_user_path(@current_user) %></li>
    <li><%= link_to "Following", following_user_path(@current_user) %> </li>
    <li class="divider"></li>
    <li><%= link_to "Logout" , login_path, :method => :delete %></li>
<% end %>
  </ul>
<nav>
  <div class"nav-wrapper">
    <a href="#!" class="brand-logo">Logo</a>
    <ul class="right hide-on-med-and-down">
      <li>
        <%= form_tag "/search", :method => "GET" do %>
          <%= text_field_tag :tag %>
        <% end %>
      </li>
      <% unless @current_user.present? %>
         <li><%= link_to "Login", login_path %> </li>
         <li><%= link_to "Sign Up", new_user_path %></li>
     <% else %>
        <li><%= link_to "Home", root_path %> </li>
        <li><%= link_to "All Users", users_path %></li>
         <li><%= link_to "Galleries", galleries_path %> </li>
         <li><%= link_to "Photos", photos_path %> </li>
         <!-- Dropdown Trigger -->
         <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><%= full_name(@current_user) %><i class="material-icons right">arrow_drop_down</i></a></li>
     <% end %>
    </ul>
  </div>
</nav>
