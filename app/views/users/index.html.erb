<div class="container">
<h3 class="center">All Users</h3>

<div class="row">
    <% @users.each do |u| %>
    <div class="col s2 offset-s3">
      <% if u.image %>
       <%= cl_image_tag u.image, class:"circle profile" %>
     <% else %>
       <%= cl_image_tag "https://www.fillmurray.com/100/100image", class:"circle profile" %>
     <% end %>
     </div>
    <div class="col s7">
       <h5> <%= link_to "#{full_name(u)}", u %></h5>
        <p><strong>Email:</strong> <%= u.email %></p>
        <p><strong>Country: </strong> <%= u.country %></p>
     </div>
    <% end %>
   </div>
</div>

