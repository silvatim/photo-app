<% unless @gallery.errors.full_messages.empty? %>
   <ul>
    <% @gallery.errors.full_messages.each do |e| %>
       <li><%= e %></li>
     <% end %>
   </ul>
 <% end %>

<%= form_for [@user, @gallery] do |f| %>
 <p>
  <%= f.label :title %>
  <%= f.text_field :title, :required => true %>
 </p>
 <p>
  <%= f.label :description %>
  <%= f.text_field :description%>
 </p>
 <p>
  <%= f.label "Private" %>
  <%= f.check_box :visibility%>
 </p>
 <%= f.submit %>
<% end %>
