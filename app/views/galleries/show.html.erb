<div class="center">
<h3><%= @gallery.title %></h3>
<% if current_user?(@user) %>
  <%= link_to "Delete Gallery", user_gallery_path(@user, @gallery), class:"waves-effects waves-light btn", :method => :delete,
    :data => {confirm: "Are you sure?"} %>
 <%= link_to "Edit Gallery", edit_user_gallery_path(@user, @gallery), class:"waves-effects waves-light btn" %>
 <%= link_to "Add Photo to Gallery", new_gallery_photo_path(@gallery), class:"waves-effects waves-light btn" %>
<% end %>
</div>
<div class="row">
<% @gallery.photos.each do |p| %>
   <div class="col s4">
    <div class="card">
      <div class="card-image">
      <%= link_to( cl_image_tag(p.image), user_photo_path( @user, p) ) %>
      <span class="card-title"><%= "#{p.title} - #{full_name(@user)}" %></span>
            </div>
          </div>
        </div>
    <% end %>
  </div>



